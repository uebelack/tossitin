{
  "name": "tossitin",
  "version": "2.0.0",
  "description": "Generate git commit messages using a LangGraph workflow that inspects repo state and commits changes",
  "main": "index.mjs",
  "type": "module",
  "bin": {
    "tossitin": "./index.mjs"
  },
  "keywords": [
    "git",
    "commit",
    "ai",
    "langchain",
    "claude",
    "anthropic",
    "automation"
  ],
  "author": "David Ãœbelacker",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uebelack/tossitin"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.mjs"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@langchain/anthropic": "^1.3.17",
    "@langchain/core": "^1.1.24",
    "@langchain/ollama": "^1.2.2",
    "execa": "^9.6.0",
    "langchain": "^1.2.24",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@eslint/json": "^1.0.0",
    "@eslint/markdown": "^7.5.1",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
